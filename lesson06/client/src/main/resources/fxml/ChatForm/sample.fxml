<VBox fx:id="main" alignment="center" HBox.hgrow="ALWAYS" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.home.geekbrains.java.core_02.lesson06.client.gui.Controller">

    <stylesheets>
        <URL value="@Styles.css" />
    </stylesheets>

    <BorderPane>
        <left>

            <HBox fx:id="AuthPanel">
                <Button fx:id="btnConnect" onAction="#connectHandler" text="Connect" />
                <TextField fx:id="loginField" promptText="Логин" text="q1" />
                <PasswordField fx:id="passwordField" promptText="Пароль" text="qwerty1" />
            </HBox>

        </left>
        <center>
            <Label fx:id="label" text="  &quot;Hope for the best, but prepare for the worst&quot;  " />
        </center>
        <right>
            <ImageView fx:id="imageView" fitHeight="30" fitWidth="200.0" preserveRatio="true" />
        </right>
    </BorderPane>

    <HBox VBox.vgrow="ALWAYS">
        <VBox HBox.hgrow="ALWAYS">
            <HBox VBox.vgrow="ALWAYS">
                <TextArea fx:id="textArea" editable="false" prefWidth="600" promptText="" text="" HBox.hgrow="ALWAYS" />

                <ListView fx:id="clientList" onMouseClicked="#listViewMouseClickHandler" HBox.hgrow="ALWAYS" />
            </HBox>

            <HBox>
                <TextField fx:id="textField" onAction="#sendMsgHandler" promptText="Enter message ..." HBox.hgrow="ALWAYS" />
                <Button fx:id="btnSend" onAction="#sendMsgHandler" text="Send" />
            </HBox>
        </VBox>
    </HBox>
</VBox>
